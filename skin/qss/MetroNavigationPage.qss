/* Metro Style*/
QPushButton {
   background: green;
}

QPushButton:hover, QPushButton:pressed , QPushButton:checked, QPushButton:focus
{
    background-color: rgb(85, 170, 255);
    text-align: center;
    font-weight:100
}

QPushButton#MonitorButton
{
    height: 400px;
    background-image: url(skin/icons/dark/appbar.monitor.play.png);
    background-repeat:no-repeat;
    background-position: center top;
}
QPushButton#MonitorButton:hover
{
    background-image: url(skin/icons/dark/appbar.monitor.play.png);
    background-repeat:no-repeat;
    background-position: center right;
}
QPushButton#MonitorButton:pressed, QPushButton#MonitorButton:checked
{
    background-image: url(skin/icons/light/appbar.monitor.play.png);
    background-repeat:no-repeat;
    background-position: center left;
}

